acl lan {
{% for ip in allowed_query_ips %}
	{{ ip }};
{% endfor %}
};
options {

	directory "/var/lib/bind";

	forwarders {
	{% for forwarder_ip in forwarder_ips %}
		{{ forwarder_ip }};	
	{% endfor %}
	};
	
	allow-query {
		lan;
	};

	dnssec-validation no;

	listen-on-v6 { any; };
};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};