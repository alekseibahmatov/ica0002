acl lan {
{% for ip in allowed_query_ips %}
	{{ ip }};
{% endfor %}
};

acl docker {
    172.17.0.0/24;
};

key "dns_transfer_key" {
	algorithm hmac-sha256;
	secret "{{ dns_transfer_secret }}";
};

key "dns_update_key" {
	algorithm hmac-sha256;
	secret "{{ dns_update_secret }}";
};

options {

	directory "/var/lib/bind";

	forwarders {
	{% for forwarder_ip in forwarder_ips %}
		{{ forwarder_ip }};	
	{% endfor %}
	};
	
	allow-query {
		lan;
		docker;
	};

	dnssec-validation no;

	listen-on-v6 { any; };
};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};