apiVersion: 1

datasources:
- name: Prometheus
  type: prometheus
  orgId: 1
  url: http://{{ groups['internal_services'][0] }}:9090/prometheus
  isDefault: true
  version: 1
  editable: true

- name: Influxdb pinger
  type: influxdb
  orgId: 1
  url: http://{{ groups['internal_services'][0] }}:8086
  database: latency
  httpMethod: 'POST'
  isDefault: false
  version: 1
  editable: true

- name: Influxdb telegraf
  type: influxdb
  orgId: 1
  url: http://{{ groups['internal_services'][0] }}:8086
  database: telegraf
  httpMethod: 'POST'
  isDefault: false
  version: 1
  editable: true